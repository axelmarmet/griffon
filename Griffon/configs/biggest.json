{
    "seed" : 0,

    "training":{
        "warmup_steps"         : 4000,
        "lr_mult"              : 0.05,
        "epochs"               : 30,
        "batch_size"           : 32,
        "simulated_batch_size" : 512,
        "ignore_pad_idx"       : true
    },

    "architecture":{
        "subtoken_embedding_dim":1024,
        "token_embedding_dim":2048,
        "num_subtokens":5,
        "scale_token_embeddings":false,
        "activation_fn":"gelu",
        "transformer":{
            "type":"code",
            "num_layers":4,
            "encoder_layer":{
                "d_model":2048,
                "nhead":8,
                "dim_feedforward":4096,
                "num_relative_distances":4
            },
            "norm":{
                "type":"layer_norm",
                "eps":1e-5,
                "d_model":2048
            }
        }
    }
}